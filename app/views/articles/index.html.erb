<div class="hero">
  <div class="container">
    <h2>All articles</h2>
  </div>
</div>

<div class="main">
  <div class="container">
    <% @articles.each do |article| %>
    <div class="category">
      <h3><%= article.title %></h3>
      <p><%= article.summary %></p>
      <%= link_to "Read", article.link, target: :_blank %>
    </div>
    <% end %>
  </div>
</div>